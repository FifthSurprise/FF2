<h1><%= @stack.name %></h1>

<% if !current_user.nil? %>
<!-- implement studying this stack -->
  <p> <%= link_to 'Study this stack', study_stack_path(@stack), method: "post",:class => "btn btn-default" %></p>
  <% end %>

<h2>Cards in the stack</h2>

<ol>
  <% @stack.cards.each do |card| %>
  <li><%= link_to card.question.split("\n").first, card %></li>
  <% end %>
</ol>

<%= link_to 'Add New Card', new_stack_card_path(@stack) , method:"get", :class =>"btn btn-default" %>
