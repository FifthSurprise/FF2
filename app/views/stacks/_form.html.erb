<%= form_for(@stack) do |f| %>
<% if @stack.errors.any? %>
<div id="error_explanation">

</div>
<% end %>
  
  <div class ="field">
    <%= f.label :question %>
    <%= f.text_area :question %>
  </div>
  <div class ="field">
    <%= f.label :answer %>
    <%= f.text_area :answer %>
  </div>

  <%= f.hidden_field(:stack_id, :value => @stack.id ) %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
